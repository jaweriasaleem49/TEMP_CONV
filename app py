
import os

# Convert Celsius to Fahrenheit
def celsius_to_fahrenheit(celsius):
    fahrenheit = (celsius * 9/5) + 32
    return fahrenheit

# Convert Fahrenheit to Celsius
def fahrenheit_to_celsius(fahrenheit):
    celsius = (fahrenheit - 32) * 5/9
    return celsius

# Function to print the main file path
def print_file_path():
    # Get the absolute path of the current script
    current_file_path = os.path.abspath(__file__)

    # Get the directory containing the current script
    current_directory = os.path.dirname(current_file_path)

    print(f"Current file path: {current_file_path}")
    print(f"Directory of the file: {current_directory}")

# Main function
if __name__ == "__main__":
    # Example usage of temperature conversions
    celsius_temp = 25
    fahrenheit_temp = 77

    print(f"{celsius_temp}째C is {celsius_to_fahrenheit(celsius_temp)}째F")
    print(f"{fahrenheit_temp}째F is {fahrenheit_to_celsius(fahrenheit_temp)}째C")

    # Print the main file path
    print_file_path()
